<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location" value="database.properties"/>
	</bean>

    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    	<property name="driverClassName" value="${driver}"/>
    	<property name="url" value="${url}"/>
    	<property name="username" value="${username}"/>
    	<property name="password" value="${password}"/>
    </bean>
    
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
       	<property name="dataSource"  ref="dataSource" />
    </bean>
    
    <!-- DAOs -->
    <bean id="lectureDao" class="com.skorobahatko.university.dao.LectureDaoImpl">
       	<property name="jdbcTemplate"  ref="jdbcTemplate" />
    </bean>
    
    <bean id="courseDao" class="com.skorobahatko.university.dao.CourseDaoImpl">
       	<property name="jdbcTemplate"  ref="jdbcTemplate" />
       	<property name="lectureDao"  ref="lectureDao" />
    </bean>
    
    <bean id="participantDao" class="com.skorobahatko.university.dao.ParticipantDaoImpl">
       	<property name="jdbcTemplate"  ref="jdbcTemplate" />
       	<property name="courseDao"  ref="courseDao" />
       	<property name="lectureDao"  ref="lectureDao" />
    </bean>
    
    <bean id="timetableDao" class="com.skorobahatko.university.dao.TimetableDaoImpl">
       	<property name="jdbcTemplate"  ref="jdbcTemplate" />
       	<property name="participantDao"  ref="participantDao" />
    </bean>
    
    <!-- Services -->
    <bean id="courseService" class="com.skorobahatko.university.service.CourseServiceImpl">
       	<property name="courseDao"  ref="courseDao" />
    </bean>
    
    <bean id="lectureService" class="com.skorobahatko.university.service.LectureServiceImpl">
       	<property name="lectureDao"  ref="lectureDao" />
    </bean>
    
    <bean id="participantService" class="com.skorobahatko.university.service.ParticipantServiceImpl">
       	<property name="participantDao"  ref="participantDao" />
    </bean>
    
    <bean id="timetableService" class="com.skorobahatko.university.service.TimetableServiceImpl">
       	<property name="timetableDao"  ref="timetableDao" />
    </bean>

</beans>